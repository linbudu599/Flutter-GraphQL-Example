{
  "name": "Simple ToDo GraphQL Server",
  "restartable": "r",
  "delay": "500",
  "ignore": [".git", "node_modules/**"],
  "verbose": true,
  "execMap": {
    "ts": "ts-node "
  },

  "ext": "ts",
  "watch": ["./*.ts"],
  "env": {
    "NODE_ENV": "development",
    "PORT": 1111
  },
  "legacy-watch": false
}
